@{
    ViewData["Title"] = "Create Position"; //prez ViewData i ViewBag prenasqm danni ot Service Layer-a kym
    //View Layer-a, t.e. prenasqm danni kym View-ata, koito danni obache NE iskam da sa chast ot 
    //dadeniqAllViewModel, s kojto izkarvam generalnite danni za obektite i gi pokazwam na user-a!!!!
}
<h1 class="text-center">Create Position</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Positions" asp-action="Create" method="post">
    <div class="form-group">
        <label for="positionName">Position Name</label>
        <input type="text" class="form-control" id="positionName" placeholder="Position Name..." name="positionName">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center text-center">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-area="" asp-controller="Positions" asp-action="All" class="btn btn-default">Back</a>
    </div>
</form>